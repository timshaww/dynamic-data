<h2>Customers</h2>

<style>
	.action-buttons { display: flex; gap: 5px; } .action-btn { padding: 6px 16px; border: none; color: white; font-weight: 500; text-decoration: none;
	display: inline-block; height: 38px; border-radius: 4px; line-height: 24px; text-align: center; } .view-btn { background-color: #3b71ca; }
	.edit-btn { background-color: #ffc107; color: #212529; } .delete-btn { background-color: #dc3545; cursor: pointer; } .action-btn:hover { opacity:
	0.9; color: white; } .edit-btn:hover { color: #212529; } form { margin: 0; padding: 0; height: 38px; }
</style>

<div class='d-flex justify-content-between align-items-center mb-3'>
	<p>View all customer information</p>
	<a href='/customers/new' class='btn btn-success'>+</a>
</div>

<div class='table-responsive'>
	<table class='table table-striped table-hover'>
		<thead class='table-light'>
			<tr>
				<th>ID</th>
				<th>Full Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th class='actions-column'>Actions</th>
			</tr>
		</thead>
		<tbody>
			{{#if customers.length}}
				{{#each customers}}
					<tr>
						<td>{{this.id}}</td>
						<td>{{this.firstName}} {{this.lastName}}</td>
						<td>{{this.email}}</td>
						<td>{{this.phone}}</td>
						<td class='actions-column'>
							<div class='action-buttons'>
								<a href='/customers/{{this.id}}' class='action-btn view-btn'>View</a>
								<a href='/customers/{{this.id}}/edit' class='action-btn edit-btn'>Edit</a>
								<form
									action='/customers/{{this.id}}?_method=DELETE'
									method='POST'
									style='display: inline-block;'
									onsubmit="return confirm('Are you sure you want to delete this customer?');"
								>
									<button type='submit' class='action-btn delete-btn'>Delete</button>
								</form>
							</div>
						</td>
					</tr>
				{{/each}}
			{{else}}
				<tr>
					<td colspan='5' class='text-center'>No customers found.</td>
				</tr>
			{{/if}}
		</tbody>
	</table>
</div>