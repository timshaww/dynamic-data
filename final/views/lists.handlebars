<div class='max-w-4xl mx-auto'>
	<div class='flex justify-between items-center mb-6'>
		<h1 class='text-3xl font-bold'>All Lists</h1>
		<a href='/admin' class='bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700'>
			Manage Lists
		</a>
	</div>

	<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'>
		{{#each lists}}
			<div class='bg-white rounded-lg shadow-md p-4'>
				<h2 class='text-xl font-semibold mb-2'>{{this.title}}</h2>
				<p class='text-gray-600 mb-4'>{{this.description}}</p>
				<div class='flex justify-between items-center'>
					<span class='text-sm text-gray-500'>
						{{this.TodoItems.length}}
						tasks
					</span>
					<a href='/lists/{{this.id}}' class='text-blue-600 hover:text-blue-800'>
						View Tasks â†’
					</a>
				</div>
			</div>
		{{else}}
			<div class='col-span-3 text-center text-gray-500'>
				No lists created yet. Create your first list in the Admin section!
			</div>
		{{/each}}
	</div>
</div>